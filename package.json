{
  "name": "abortify",
  "version": "1.0.0",
  "description": "A cancellation token implementation in typescript",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "author": "Chris Baker <mail.chris.baker@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/bakerface/abortify#readme",
  "keywords": [
    "typescript",
    "cancel",
    "cancellation",
    "token",
    "source",
    "abort",
    "async",
    "await",
    "promise",
    "sleep"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bakerface/abortify.git"
  },
  "bugs": {
    "url": "https://github.com/bakerface/abortify/issues"
  },
  "scripts": {
    "build": "rollup -c",
    "dist": "git add -A dist",
    "lint": "eslint src --ext .js,.ts",
    "test": "nyc mocha 'test/**/*.ts'",
    "version": "run-s build dist"
  },
  "nyc": {
    "checkCoverage": true,
    "sourceMap": true,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "test/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "@wessberg/rollup-plugin-ts": "^1.2.24",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "mocha": "^7.1.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "rollup": "^2.9.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  }
}
